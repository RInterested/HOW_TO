means = c(5, 30, 500, 1, 50)
sd = c(.1, .15, .2, .34, .24)
i = 4

sam = data.frame(val = rnorm(i * length(means), 
                  rep(means, each = i), rep(sd, each = i)), 
                  group = factor(rep(1:length(means), each=i)))
                  
sam

